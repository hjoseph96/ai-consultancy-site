<style>
  :global(.splide__arrow) {
    background: #D20202;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    opacity: 0.9;
    position: absolute;
    z-index: 10;
    top: 50%;
    transform: translateY(-50%);
  }
  
  :global(.splide__arrow--prev) {
    left: -60px;
  }
  
  :global(.splide__arrow--next) {
    right: -60px;
  }
  
  :global(.splide__arrow:hover) {
    background: white;
    opacity: 1;
  }
  
  :global(.splide__pagination) {
    bottom: 1.5em !important;
  }
  
  :global(.splide__pagination__page) {
    background: #d1d5db;
    width: 10px;
    height: 10px;
  }
  
  :global(.splide__pagination__page.is-active) {
    background: #D20202;

  }
  
  :global(.splide__slide) {
    padding: 0.5rem;
  }

  :global(.text-byline)
  {
    font-weight: 300;
    color: whitesmoke;
    line-height: 1.8;
  }

  /* Companies Scrolling Section */
  .companies-scroll-container {
    overflow: hidden;
    position: relative;
    width: 100%;
  }

  .companies-scroll {
    display: flex;
    align-items: center;
    gap: 3rem;
    padding: 2rem 0;
    animation: scroll 18s linear infinite;
    width: max-content;
  }

  .company-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 150px;
    height: 80px;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .company-logo:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: #D20202;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(210, 2, 2, 0.2);
  }

  .company-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    filter: brightness(0.9) contrast(1.1);
    transition: filter 0.3s ease;
  }

  .company-logo:hover .company-img {
    filter: brightness(1) contrast(1);
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Pause animation on hover */
  .companies-scroll-container:hover .companies-scroll {
    animation-play-state: paused;
  }

  /* Book Now Button */
  .book-now-btn {
    display: inline-block;
    background: #D20202;
    color: whitesmoke;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;

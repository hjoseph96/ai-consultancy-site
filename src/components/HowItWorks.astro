---
import { Splide, SplideSlide } from 'astro-splide';
import { Tweet, Vimeo, YouTube } from 'astro-embed';

import '@splidejs/splide/dist/css/themes/splide-default.min.css';
import '@splidejs/react-splide/css';
---

<div class="how-it-works">
  <div class="container text-center sm:p-24 px-4 py-20" id="our-services">
    <div class="h2">Our Services</div>


    <p class="text-lg text-byline mt-4 max-w-3xl mx-auto">
      From security audits to fractional CTO services, we help SaaS founders build secure, scalable applications
    </p>
  </div>

  <div class="container px-4 pb-20 relative">
    <Splide
      options={{
        type: 'loop',
        perPage: 1,
        perMove: 1,
        gap: '1rem',
        pagination: true,
        arrows: true,
        autoplay: false,
        breakpoints: {
          640: {
            perPage: 1,
            gap: '1rem',
          },
          768: {
            perPage: 2,
            gap: '1.5rem',
          },
          1024: {
            perPage: 3,
            gap: '2rem',
          },
        },
      }}
      aria-label="Service Tiers"
    >
      <!-- Tier 1 -->
      <SplideSlide>
        <div class="bg-gray-800/10 backdrop-blur-sm rounded-xl shadow-lg border-2 border-[#D20202] p-6 h-full flex flex-col max-w-sm mx-auto">
